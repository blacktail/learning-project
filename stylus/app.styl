linear-gradient(dir, from, to)
	background-color to
	background -webkit-linear-gradient(dir, from, to)
	background -moz-linear-gradient(dir, from, to)
	background -ms-linear-gradient(dir, from, to)
	background -o-linear-gradient(dir, from, to)

.panel
	background white
	box-shadow 1px 1px 1px #d9d9d9

.inline-label
	font-size 0.875em;
	color #4d4d4d;
	cursor pointer;
	display inline
	font-weight 500

#sidePanel
	border solid 1px #d9d9d9
	box-shadow 1px 1px 1px #d9d9d9

#sideTitle
	linear-gradient(top, #f2f2f2, #d9d9d9);
	position relative;
	padding .5em .7em 1em;

#sideTitle h4
	position relative
	font-weight normal
	font-family sans-serif

a#btnAddServ
	position absolute
	display block
	width 25px
	height 25px
	top .2em
	right 0
	background: url(../img/sprites.png) -6px -4px no-repeat
	text-indent: -9999px;

#searchBox
	height 2em
	line-height 2em
	font-size 0.9em
	width 100%

#servTreeCon
	min-height 20em

#servTitle
	position relative
	margin-top 1em

#servTitle h3
	padding-bottom 10px
	border-bottom solid 1px #d9d9d9

#servTitle h3 span
	font-size .65em
	color: #888

#alertInfo
	font-size 1.5em

#alertInfo span
	font-size .35em
	color #bbb

#alertBtns
	float right
	position relative
	top -1.6em

#btnAcknowlege
	background-color #5e1d6c
	border-color #5e1d6c
	margin-right .1em

#btnViewAlertHist
	background-color #009ad9
	font-size .45em

#servCon p.title a
	font-size .8em
	font-weight bold

#servCon h4
	margin .8em 0 2em .6em
	background url(../img/sprites.png) -34px -29px no-repeat
	padding-left 1.2em
 
#servCon h4 span
	font-size .9em
	font-family sans-serif
	font-weight normal

#servCon form .row
	max-width 100%

#servCon select
	width auto
	font-size .8em
	margin-top: .2em

#isMonitoring
	margin-right 1em

